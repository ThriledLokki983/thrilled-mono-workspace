{
  "watch": ["src", ".env"],
  "ext": "js,ts,json",
  "ignore": ["src/logs/*", "src/**/*.{spec,test}.ts"],
  "exec": "ts-node --project tsconfig.dev.json -r tsconfig-paths/register src/server.ts",
  "env": {
    "TS_NODE_PROJECT": "tsconfig.dev.json"
  },
  "legacyWatch": true,
  "delay": "1000"
}
