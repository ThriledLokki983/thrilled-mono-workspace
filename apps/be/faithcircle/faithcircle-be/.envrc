# Application name
export APP_NAME="faithcircle-api"

# Docker project name - prevents name conflicts with other projects
export COMPOSE_PROJECT_NAME="faithcircle"

# Environment selection
# Uncomment the one you want to use:
export NODE_ENV="development"
# export NODE_ENV="production"

# Load environment variables from .env files based on NODE_ENV
if [ "$NODE_ENV" = "production" ]; then
  echo "Loading production environment..."
  source_env .env.production.local
else
  echo "Loading development environment..."
  source_env .env.development.local
fi

# Docker convenience exports
export DOCKER_DEV_FILE="docker-compose.yml"
export DOCKER_PROD_FILE="docker-compose.prod.yml"

# Print current settings
echo "Environment: $NODE_ENV"
echo "App name: $APP_NAME"
echo "Docker project: $COMPOSE_PROJECT_NAME"
