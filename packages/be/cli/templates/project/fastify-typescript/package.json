{
  "name": "{{kebabCase name}}",
  "version": "1.0.0",
  "description": "{{description}}",
  "main": "dist/index.js",
  "scripts": {
    "build": "tsc",
    "start": "node dist/index.js",
    "dev": "tsx watch src/index.ts",
    "test": "jest",
    "test:watch": "jest --watch",
    "lint": "eslint src --ext .ts --fix",
    "format": "prettier --write src/**/*.ts",
    "type-check": "tsc --noEmit"
  },
  "keywords": [],
  "author": "{{author}}",
  "license": "{{license}}",
  "dependencies": {
    "fastify": "^4.21.0",
    "@fastify/cors": "^8.3.0",
    "@fastify/helmet": "^11.1.1",
    "@fastify/formbody": "^7.4.0",
    "@fastify/multipart": "^7.6.0",
    "dotenv": "^16.3.1"{{#if database}}{{#if (eq database 'postgresql')}},
    "@fastify/postgres": "^5.2.2",
    "pg": "^8.11.0"{{else if (eq database 'mysql')}},
    "@fastify/mysql": "^4.1.0",
    "mysql2": "^3.6.0"{{else if (eq database 'sqlite')}},
    "sqlite3": "^5.1.6"{{else if (eq database 'mongodb')}},
    "@fastify/mongodb": "^6.1.0",
    "mongodb": "^5.7.0"{{/if}}{{/if}}{{#if features.authentication}},
    "@fastify/jwt": "^7.2.0",
    "bcryptjs": "^2.4.3"{{/if}}{{#if features.validation}},
    "@fastify/type-provider-typebox": "^3.5.0",
    "@sinclair/typebox": "^0.30.0"{{/if}}
  },
  "devDependencies": {
    "@types/node": "^20.4.5",
    "@types/bcryptjs": "^2.4.2",
    "typescript": "^5.1.6",
    "tsx": "^3.12.7",
    "jest": "^29.6.1",
    "@types/jest": "^29.5.3",
    "eslint": "^8.45.0",
    "@typescript-eslint/eslint-plugin": "^6.2.0",
    "@typescript-eslint/parser": "^6.2.0",
    "prettier": "^3.0.0"
  }
}
