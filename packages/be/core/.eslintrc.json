{
  "extends": ["../../../.eslintrc.json"],
  "ignorePatterns": [
    "!**/*",
    "dist/**/*",
    "out-tsc/**/*",
    "node_modules/**/*",
    "**/*.d.ts"
  ],
  "overrides": [
    {
      "files": ["*.ts", "*.tsx", "*.js", "*.jsx"],
      "rules": {}
    },
    {
      "files": ["*.ts", "*.tsx"],
      "rules": {}
    },
    {
      "files": ["*.js", "*.jsx"],
      "rules": {}
    },
    {
      "files": ["*.json"],
      "parser": "jsonc-eslint-parser",
      "rules": {
        "@nx/dependency-checks": [
          "error",
          {
            "ignoredFiles": ["{projectRoot}/eslint.config.{js,cjs,mjs}"],
            "ignoredDependencies": [
              "@types/body-parser",
              "@types/express-serve-static-core", 
              "@types/qs",
              "@types/serve-static"
            ]
          }
        ]
      }
    }
  ]
}
